{
  "name": "vecino-marketplace",
  "version": "0.0.1",
  "description": "A local marketplace for AMOA vecino to explore AI-driven development",
  "author": "Jonel Dominic Tapang",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "node scripts/dev.cjs",
    "list": "node scripts/dev.cjs list",
    "generate": "node scripts/dev.cjs generate",
    "parse-prd": "node scripts/dev.cjs parse-prd",
    "start:frontend": "npm run dev --workspace=frontend",
    "start:backend": "npm run dev --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:shared": "npm run build --workspace=shared",
    "build:all": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "lint": "npm run lint --workspaces --ignore-pattern=\"**/dist/**\"",
    "lint:fix": "npm run lint --workspaces -- --fix --ignore-pattern=\"**/dist/**\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "prepare": "husky",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:db": "docker-compose -f docker-compose.dev.yml up mongodb redis",
    "deploy:frontend": "aws s3 sync frontend/dist/ s3://$S3_BUCKET_NAME --delete && aws cloudfront create-invalidation --distribution-id $CLOUDFRONT_DISTRIBUTION_ID --paths \"/*\"",
    "deploy:backend": "cd backend && eb deploy",
    "deploy": "npm run build:all && npm run deploy:frontend && npm run deploy:backend",
    "init:aws": "cd infrastructure/cdk && npm run bootstrap && npm run deploy"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "boxen": "^8.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cli-table3": "^0.6.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "fastmcp": "^1.20.5",
    "figlet": "^1.8.0",
    "fuse.js": "^7.0.0",
    "gradient-string": "^3.0.0",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.2.0",
    "openai": "^4.89.0",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.0"
  }
}
