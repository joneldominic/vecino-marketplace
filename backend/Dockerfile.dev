FROM node:18-alpine

WORKDIR /app

# Copy package.json files
COPY package*.json ./
COPY backend/package*.json ./backend/
COPY shared/package*.json ./shared/

# Install dependencies
RUN npm install
RUN npm run --workspace=shared build

# Copy source code
COPY . .

# Expose port
EXPOSE 4000

# Set working directory to backend
WORKDIR /app/backend

# Start development server
CMD ["npm", "run", "dev"] 